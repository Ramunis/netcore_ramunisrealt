@using RamunisrealtNET.Models
@model IEnumerable<Contracts>
@{
    ViewData["Title"] = "Доска объявлений";
}
<div class="text-center">

    <div class="nav-scroller bg-body shadow-sm">
        <nav class="nav nav-underline" aria-label="Secondary navigation">

            <form method="post">
               
                    Тип объекта<select id="CatType" name="CatType">

                        <option value="1">Квартира</option>

                        <option value="2">Комната</option>

                        <option value="3">Дом</option>

                        <option value="4">Земля</option>

                        <option value="5">Гараж</option>

                        <option value="6">Коммерция</option>

                    </select>

               


               
                    Район<select id="DistType" name="DistType">

                        <option value="1">Ленинский</option>

                        <option value="2">Фрунзеннский</option>

                        <option value="3">Первомайский</option>

                        <option value="4">Первореченский</option>

                        <option value="5">Советский</option>

                        <option value="6">Артём</option>

                        <option value="7">Остров Русский</option>

                    </select>

                

               
                    Услуга<select id="ServType" name="ServType">

                        <option value="1">Аренда</option>

                        <option value="2">Продажа</option>

                    </select>
               

               
                    Ремонт<select id="RepType" name="RepType">

                        <option value="1">Старый</option>

                        <option value="2">Новый</option>

                        <option value="3">Евро</option>

                        <option value="4">Люкс</option>

                    </select>
                

                <label for="LevelType">Этаж от</label>
                <input type="number" id="LevelType" name="LevelType" value="5">

                <label for="SqType">Площадь до</label>
                <input type="number" id="SqType" name="SqType" value="50">

                <label for="TermType">Срок от</label>
                <input type="number" id="TermType" name="TermType" value="30">

                <label for="PriceType">Цена до</label>
                <input type="number" id="PriceType" name="PriceType" value="30000">

                &nbsp;<input type="submit" class="btn btn-primary" value="Filter" />
                </form>
        </nav>
    </div>
    @*@Html.ActionLink("По району", "Rent5")
        @Html.ActionLink("Самые дешёвые", "Rent1")
        @Html.ActionLink("Самые дорогие", "Rent2")
        @Html.ActionLink("Min площадь", "Rent3")
        @Html.ActionLink("Max площадь", "Rent4")*@
    <h1>Доска объявлений</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">ДЗ</th>
                <th scope="col">Услуга</th>
                <th scope="col">Тип</th>
                <th scope="col">Город</th>
                <th scope="col">Район</th>
                <th scope="col">Адрес</th>
                <th scope="col">Ремонт</th>
                <th scope="col">Площадь</th>
                <th scope="col">Этаж</th>
                <th scope="col">Дата постройки</th>
                <th scope="col">Срок</th>
                <th scope="col">Цена</th>
                <th scope="col">Фото</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Contracts item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.DZ</td>
                    <td>@item.Service?.Servic</td>
                    <td>@item.Categor?.Cat</td>
                    <td>@item.City</td>
                    <td>@item.District?.District</td>
                    <td>@item.Adres</td>
                    <td>@item.Repair?.Rep</td>
                    <td>@item.Sq</td>
                    <td>@item.Level</td>
                    <td>@item.DS</td>
                    <td>@item.Term</td>
                    <td>@item.Price</td>
                    <td>
                        <img src="@item.Pic" width="189" height="255" alt="">
                    </td>
                    <td><a asp-controller="Home" asp-action="Add" asp-route-id=@item.ID>Купить</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
